<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="adivinha.gregorio.com.adivinha.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Escolha um nÃºmero entre 0 e 10"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/cabecalho_texto" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/botao_jogar"
        android:id="@+id/botao_jogar_id"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/texto_numero"
        android:id="@+id/resultado_id"
        android:layout_marginTop="113dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textIsSelectable="false"
        android:textSize="@dimen/cabecalho_texto" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpar"
        android:id="@+id/botao_voltar"
        android:layout_below="@+id/botao_jogar_id"
        android:layout_marginTop="31dp"
        android:layout_alignEnd="@+id/botao_jogar_id"
        android:layout_alignStart="@+id/botao_jogar_id" />

</RelativeLayout>
